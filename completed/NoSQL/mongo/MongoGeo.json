//mongoimport -c alunos --jsonArray < alunos.json

db.alunos.aggregate([
{
    $geoNear : {
        near : {
            coordinates: [-23.5640265, -46.6527128],
            type : "Point"
        },
        distanceField : "distancia.calculada",
        spherical : true,
        num : 4
    }
},
{ $skip :1 }
])

db.alunos.createIndex({
    localizacao : "2dsphere"
})